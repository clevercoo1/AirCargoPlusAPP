<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">


    <LinearLayout
        android:id="@+id/GjjMove_in_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#fff">

        <CheckBox
            android:id="@+id/GjjMove_checkbox"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:button="@null"
            android:checked="false"
            android:background="@drawable/checkbox" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="2">

            <njkgkj.com.aircargoplusapp.view.AutofitTextView
                android:id="@+id/GjjMove_inTxt_yundanhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000-11111111"
                android:textColor="#000"
                android:textSize="@dimen/house_small_size"
                android:layout_gravity="center"
                android:maxLines="2"
                app:sizeToFit="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="1">

            <njkgkj.com.aircargoplusapp.view.AutofitTextView
                android:id="@+id/GjjMove_inTxt_tema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABC"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="@dimen/house_small_size"
                android:layout_gravity="center"
                android:maxLines="2"
                app:sizeToFit="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="1">
            <njkgkj.com.aircargoplusapp.view.AutofitTextView
                android:id="@+id/GjjMove_inTxt_daili"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABCD"
                android:textColor="#000"
                android:textSize="@dimen/house_small_size"
                android:layout_gravity="center"
                android:maxLines="2"
                app:sizeToFit="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="2">
            <njkgkj.com.aircargoplusapp.view.AutofitTextView
                android:id="@+id/GjjMove_inTxt_hangban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CA1234/20-11-12"
                android:textColor="#000"
                android:textSize="@dimen/house_small_size"
                android:layout_gravity="center"
                android:maxLines="2"
                app:sizeToFit="true"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>